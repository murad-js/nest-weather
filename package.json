  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "typeorm": "typeorm",
    "build-migration:run": "npm run typeorm  -- -d ./dist/config/database/database.data-source.js migration:run",
    "build-migration:revert": "npm run typeorm -- -d ./dist/config/database/database.data-source.js migration:revert",
    "dev-typeorm": "typeorm-ts-node-commonjs",
    "migration:create": "npm run dev-typeorm migration:create ./src/migrations/$npm_config_name",
    "migration:generate": "npm run dev-typeorm -- -d ./src/config/database/database.data-source.ts migration:generate ./src/migrations/$npm_config_name",
    "migration:run": "npm run build && npm run dev-typeorm  -- -d ./src/config/database/database.data-source.ts migration:run",
    "migration:revert": "npm run build && npm run dev-typeorm -- -d ./src/config/database/database.data-source.ts migration:revert"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.1.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^11.1.1",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/serve-static": "^5.0.3",
    "@nestjs/typeorm": "11.0.0",
    "axios": "^1.9.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "handlebars": "^4.7.8",
    "nodemailer": "^7.0.3",
    "pg": "8.16.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "^7.8.2",
    "typeorm": "0.3.23"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.15.18",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
